<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_books"
    style="@style/AppTheme.Card.Margins"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout

            android:id="@+id/edtNameWrapper"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"

            android:gravity="center|left">

            <EditText
                android:id="@+id/edtName"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.13"
                android:background="@null"

                android:gravity="center|left"
                android:hint="Contact Person Name"
                android:inputType="textCapWords"
                android:paddingLeft="4dp"
                android:singleLine="true">


            </EditText>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout

            android:id="@+id/edtEmailWrapper"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"

            android:gravity="center|left">

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.13"
                android:background="@null"

                android:gravity="center|left"
                android:hint="Enter Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="4dp"
                android:singleLine="true">


            </EditText>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:id="@+id/edtWebsiteWrapper"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"

            android:gravity="center|left">

            <EditText
                android:id="@+id/edtWebsite"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.13"
                android:background="@null"

                android:gravity="center|left"
                android:hint="Enter Website"
                android:inputType="textEmailAddress"
                android:paddingLeft="4dp"
                android:singleLine="true">


            </EditText>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:id="@+id/edtAgeWrapper"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"

            android:gravity="center|left">

            <EditText
                android:id="@+id/edtAge2"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.13"
                android:background="@null"

                android:gravity="center|left"
                android:hint="Enter Age"
                android:inputType="numberSigned"
                android:maxLength="3"
                android:paddingLeft="4dp"
                android:singleLine="true">


            </EditText>

        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Edit Data"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Save Data"
                android:textColor="#FFFFFF" />


        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>

